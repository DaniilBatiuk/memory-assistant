generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  email      String  @unique
  name       String
  imageUrl   String?
  provider   String?
  providerId String?

  dictionaries Dictionary[]

  createdAt DateTime @default(now())
}

model Dictionary {
  id          String @id @default(cuid())
  title       String
  description String

  User   User   @relation(fields: [userId], references: [id])
  userId String
  words  Word[]

  createdAt DateTime @default(now())
}

model Word {
  id           String    @id @default(cuid())
  word         String
  translations String
  language     Languages

  Dictionary   Dictionary @relation(fields: [dictionaryId], references: [id])
  dictionaryId String

  createdAt DateTime @default(now())
}

enum Languages {
  de
  en
  es
  fr
  it
  ru
}
